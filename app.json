          "en": "Set LED"
        },
        "titleFormatted": {
          "en": "Set LED to [[mode]] at [[brightness]]% brightness"
        },
        "platforms": [
          "local"
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=dolphin"
          },
          {
            "name": "mode",
            "type": "dropdown",
            "values": [
              {
                "id": "blinking",
                "label": {
                  "en": "Blinking"
                }
              },
              {
                "id": "always_on",
                "label": {
                  "en": "Always On"
                }
              },
              {
                "id": "disco",
                "label": {
                  "en": "Disco"
                }
              }
            ]
          },
          {
            "name": "brightness",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 5,
            "label": "%",
            "labelDecimals": 0
          }
        ]
      }
