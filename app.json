          "local"
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=dolphin"
          },
          {
            "name": "mode",
            "type": "dropdown",
            "values": [
              {
                "id": "all",
                "label": {
                  "en": "Regular"
                }
              },
              {
                "id": "short",
                "label": {
                  "en": "Fast"
                }
              },
              {
                "id": "floor",
                "label": {
                  "en": "Floor Only"
                }
              },
              {
                "id": "water",
                "label": {
                  "en": "Water Line"
                }
              },
              {
                "id": "ultra",
                "label": {
                  "en": "Ultra Clean"
                }
              }
            ]
          }
        ]
      },
